@using Laboratorio3_1251518.Models
@model IEnumerable<Medicamentos>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mostrar Inventario</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
            background-color: #fff;
            text-align: center;
        }

            table th {
                background-color: #ca0000;
                color: #fff;
                font-weight: bold;
                font-size: 12pt;
                border: 1px solid #000;
            }

            table td {
                background-color: #ffe79f;
                padding: 5px;
                border: 1px solid #000;
            }

            table, table table td {
                border: 0px solid #000;
            }
    </style>
</head>
<body>

    @if (Model.Count() > 0)
    {
        <h2><center>Inventario: Tu salud en mis manos</center></h2>
        <form action="~/Home/index">
            <input type="submit" value="Volver" />
        </form>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Casa Productora</th>
                <th>Precio</th>
                <th>Existencia</th>
            </tr>
            @foreach (Medicamentos inventario in Model)
            {
                <tr>
                    <td>@inventario.id</td>
                    <td>@inventario.nombre</td>
                    <td>@inventario.descripcion</td>
                    <td>@inventario.casaProductora</td>
                    <td>@inventario.precio</td>
                    <td>@inventario.cantidad</td>
                </tr>
            }
        </table>

    }
</body>
</html>
